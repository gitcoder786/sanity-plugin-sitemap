{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "module": "preserve",
    "target": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "noEmit": true,
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/**/*.js"]
}
